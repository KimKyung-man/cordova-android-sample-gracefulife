<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="per.gracefulife.cordova.androbadge"
        version="1.0.0">
    <name>AndroBadge</name>
    <description>Android Badge Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,badge</keywords>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="AndroBadge" >
                <param name="android-package" value="per.gracefulife.cordova.androbadge.AndroBadge"/>
            </feature>
        </config-file>

        <source-file src="src/android/AndroBadge.java" target-dir="src/per/gracefulife/cordova/androbadge" />
    </platform>


</plugin>